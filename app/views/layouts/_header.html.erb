<header>
  <nav class="navbar navbar-expand-lg navbar-light bg-danger">
    <div class="container">
      <a class="navbar-brand" href="/"><span>cycling</span></a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav ml-auto">
    <% if customer_signed_in? %>
        <div class="d-flex justify-content-center mb-2">
          <%= render 'public/searches/form' %>
        </div>
        <li>
        <%= link_to '投稿フォーム', new_post_image_path %>
        </li>
        <li class="customer-name">
            ようこそ、<%= current_customer.last_name %> さん</br>
          </li>
          <li class="ml-4">
            <%= link_to customer_path(current_customer.id),class: 'nav-link text-light' do %>
              マイページ
          <% end %>
        <li class="ml-4">
            <%= link_to destroy_customer_session_path, method: :delete,class: 'nav-link text-light' do %>
              ログアウト
            <% end %>
        </li>
       <% elsif admin_signed_in? %>
        <li class="ml-4">
            <%=  link_to admin_path,class: 'nav-link text-light' do %>
              会員一覧
            <% end %>
          </li>
           <li class="ml-4">
            <%= link_to destroy_admin_session_path, method: :delete,class: 'nav-link text-light' do %>
              ログアウト
            <% end %>
          </li>
           <% else %>
           <li class="ml-4">
            <%= link_to new_customer_registration_path,class: 'nav-link text-light' do %>
              新規登録
            <% end %>
          </li>
          <li class="ml-4">
            <%= link_to new_customer_session_path ,class: 'nav-link text-light' do %>
              ログイン
            <% end %>

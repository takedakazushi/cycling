
<div class="container">
  <div class="row">
    <div class="p-3 mb-4 col-md-2 font-weight-bold bg-light text-dark">ログイン</div>
  </div>
  <div class="row">
    <div class="p-3 mb-4 col-md-4 font-weight-bold bg-light text-dark">会員の方はこちらからログイン</div>
  </div>

  <%= form_with model: @customer, url: customer_session_path do |f| %>
    <div class="form-group">
      <div class="row">
        <div class="col-lg-3"><%= f.label :email, "メールアドレス" %></div>
        <div class="col-lg-1"></div>
        <div class="col-lg-3"><%= f.email_field :email, autocomplete: "email", placeholder: "sample@example.com", class: "form-control border-dark" %></div>
      </div>
    </div>

    <div class="form-group">
      <div class="row">
        <div class="col-lg-3"><%= f.label :password, "パスワード" %></div>
        <div class="col-lg-1"></div>
        <div class="col-lg-3"><%= f.password_field :password, autocomplete: "password", class: "form-control border-dark" %></div>
      </div>
    </div>

    <div class="row">
      <div class="col-lg-1"></div>
      <div class="col-lg-3"></div>
      <div class="col-lg-5 mt-3 mb-5"><%= f.submit "ログイン", class: 'btn btn-primary', style: 'width:160px' %></div>
    </div>
  <% end %>

    <div class="p-3 mb-2 col-md-4 font-weight-bold bg-light text-dark">会員登録がお済でない方</div>
    <div>
      <p><%= link_to "こちら", new_customer_registration_path %>から新規登録を行ってください。</p>
    </div>

</div>

<table class='table'>
  <tr><%= image_tag customer.get_profile_image(100,100), size:'100x100' %></tr>
  <tr>
	  <th>name</th>
	  <th><%= customer.full_name %></th>
  </tr>
  <tr>
	  <th>introduction</th>
	  <th><%= customer.introduction %></th>
  </tr>
</table>

<div class='row'>
  <%= link_to edit_customer_path(customer), class: "btn btn-outline-secondary btn-block edit_customer_#{customer.id}" do %>
    <i class="fas fa-user-cog"></i>
  <% end %>
</div>
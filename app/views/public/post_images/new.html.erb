<% if @post_image.errors.any? %>
  <%= @post_image.errors.count %>件のエラーが発生しました
  <ul>
    <% @post_image.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<h1>投稿フォーム</h1>
<%= form_with model: @post_image do |f| %>
  <h4>Image</h4>
  <%= f.file_field :image, accept: "image/*" %>
  <h4>Couse＿name</h4>
  <%= f.text_field :couse_name %>
  <h4>Caption</h4>
  <%= f.text_area :caption %>
  <%= f.submit '投稿' %>
<% end %>